@page "/calculator"

<PageTitle>Calculator</PageTitle>
<h1>This is a Calculator</h1>
<style>
    .btn {
        width: 50px;
        height: 75px;
        padding: 7px;
        margin-top: 5px;

    }
</style>
<div>
   <div class="row">
    <div class="col">
        <span><button  type="button" class="btn btn-danger" @onclick="DeleteCalculatorHistory"> DH </button></span>
        <span><button  type="button" class="btn btn-warning" @onclick="ClearUserEntry"> C </button></span>
        <span><button  type="button" class="btn btn-secondary" @onclick="@(e=>ButtonPressedNumber("0"))"> 0 </button></span>
        <span><button  type="button" class="btn btn-primary" @onclick="@(e=>ButtonPressedOperator("+"))"> + </button></span>
    </div>
  </div>
  <div class="row">
    <div class="col">
        <span><button  type="button" class="btn btn-secondary" @onclick="@(e=>ButtonPressedNumber("1"))"> 1 </button></span>
        <span><button  type="button" class="btn btn-secondary" @onclick="@(e=>ButtonPressedNumber("2"))"> 2 </button></span>
        <span><button  type="button" class="btn btn-secondary" @onclick="@(e=>ButtonPressedNumber("3"))"> 3 </button></span>
        <span><button  type="button" class="btn btn-primary" @onclick="@(e=>ButtonPressedOperator("-"))">-</button></span>
    </div>
  </div>
  <div class="row">
    <div class="col">

        <span><button type="button" class="btn btn-secondary" @onclick="@(e=>ButtonPressedNumber("4"))">4</button></span>
        <span><button type="button" class="btn btn-secondary" @onclick="@(e=>ButtonPressedNumber("5"))">5</button></span>
        <span><button type="button" class="btn btn-secondary" @onclick="@(e=>ButtonPressedNumber("6"))">6</button></span>
        <span><button type="button" class="btn btn-primary" @onclick="@(e=>ButtonPressedOperator("*"))">*</button></span>
    </div>
  </div>
  <div class="row">
    <div class="col">

        <span><button type="button" class="btn btn-secondary" @onclick="@(e=>ButtonPressedNumber("7"))">7</button></span>
        <span><button type="button" class="btn btn-secondary" @onclick="@(e=>ButtonPressedNumber("8"))">8</button></span>
        <span><button type="button" class="btn btn-secondary" @onclick="@(e=>ButtonPressedNumber("9"))">9</button></span>
        <span><button type="button" class="btn btn-primary" @onclick="@(e=>ButtonPressedOperator("/"))">/</button></span>
        <span><button type="button" class="btn btn-success" @onclick="@(e=>ButtonPressedOperator("="))">=</button></span>
   </div>
 </div>

</div>
<div class="container">

    <table>
        <thead>
            <th>User Pressed </th>
            <th>Running TotalRunning Total </th>
            <th>Equation</th>
            <th>Last Pressed</th>
             <th>Operator</th>
              <th></th>
               <th></th>
        </thead>
    </table>
    <div class="row">
        <div class="col">User Pressed</div>
        <div class="col">Running Total</div>
        <div class="col">Equation</div>
        <div class="col">Last Pressed</div>
        <div class="col">Operator</div>
        <div class="col">LastNumber</div>
        <div class="col">Calculation</div>
    </div>
    <div class="row">
        <div class="col">@UserPressedKey</div>
        <div class="col">@RunningTotal</div>
        <div class="col">@Equation</div>
        <div class="col">@LastPressedKey</div>
        <div class="col">@OperatorEntered</div>
        <div class="col">@LastNumber</div>
        <div class="col">@Calculate</div>
    </div>
</div>