@page "/calculator"

<PageTitle>Calculator</PageTitle>
<h1>This is a Calculator</h1>

<div class="container">

    <div class="row teaxtbox">
        <div class="col-md-12 padding-reset">
            <input type="text" name="" value="">
        </div>
    </div>

    <div class="row">
        <div class="col">
            <span><button type="button" class="btn btn-danger">DH</button></span>
            <span><button type="button" class="btn btn-warning">C</button></span>
            <span><button type="button" class="btn btn-secondary">0</button></span>
            <span><button type="button" class="btn btn-secondary">+</button></span>
        </div>
    </div>
    <div class="row">
        <div class="col" >
            
           <span><button type="button" class="btn btn-secondary">1</button></span>
            <span><button type="button" class="btn btn-secondary">2</button></span>
            <span><button type="button" class="btn btn-secondary">3</button></span>
            <span><button type="button" class="btn btn-secondary">-</button></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <span><button type="button" class="btn btn-secondary">4</button></span>
            <span><button type="button" class="btn btn-secondary">5</button></span>
            <span><button type="button" class="btn btn-secondary">6</button></span>
            <span><button type="button" class="btn btn-secondary">*</button></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <span><button type="button" class="btn btn-secondary">7</button></span>
            <span><button type="button" class="btn btn-secondary">8</button></span>
            <span><button type="button" class="btn btn-secondary">9</button></span>
            <span><button type="button" class="btn btn-secondary">/</button></span>
        </div>
    </div>


</div>